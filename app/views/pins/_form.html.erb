<%= form_for@pin, html: { mulitpart: true } do |f| %>
  <% if @pin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pin.errors.count, "error") %> prohibited this pin from being saved:</h2>

      <ul>
      <% @pin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="field">
      <%= f.label :image %><br>
      <%= f.file_field :image, class: "form-control" %><br>
      <%= f.select :category, Category.all, :prompt => "Select One" %><br><!-- you can change this -->
      <%= f.label :description %><br>
      <%= f.text_field :description, class: "form-control" %><br>
      <%= f.submit "Create Concern", class: "btn btn-success" %>
    </div>
  </div>

<% end %>
